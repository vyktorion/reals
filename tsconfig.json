{
  "compilerOptions": {
    "target": "ES2021",            // mai rapid pentru Next
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,          // nu verificÄƒ tipurile din node_modules â†’ performanÈ›Äƒ
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],

    // ðŸ”¥ Aliasurile tale â€” pÄƒstrate exact
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/types/*": ["./src/types/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/features/*": ["./src/features/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/contexts/*": ["./src/contexts/*"]
    }
  },

  // âœ… Include doar ce foloseÈ™te Next
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],

  // ðŸš« Nu mai indexeazÄƒ node_modules
  "exclude": ["node_modules"]
}
